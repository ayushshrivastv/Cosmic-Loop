# Sample environment variables for local development
# Copy this file to .env and fill in your values

# General
NODE_ENV=development
PORT=4000

# Database
DATABASE_URL=postgres://user:password@localhost:5432/cosmic_loop

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# API Keys
OPENAI_API_KEY=your_openai_api_key
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX=your_pinecone_index

# Substreams Configuration
SUBSTREAMS_ENDPOINT=https://your-substreams-endpoint.com/graphql
SUBSTREAMS_API_KEY=your_substreams_api_key

# Solana Configuration
SOLANA_RPC_ENDPOINT=https://api.mainnet-beta.solana.com
SOLANA_STATS_ENDPOINT=https://your-solana-stats-endpoint.com/api/stats
SOLANA_STATS_API_KEY=your_solana_stats_api_key

# The Graph API
GRAPH_API_KEY=your_graph_api_key

# LayerZero V2 Configuration
# Path to the Solana program: /solana-program/
SOLANA_PROGRAM_ID=your_deployed_program_id_here
LAYERZERO_ENDPOINT=your_layerzero_endpoint_pubkey_here
FEE_ACCOUNT=your_fee_account_pubkey_here

# LayerZero API Keys (if applicable)
LAYERZERO_API_KEY=your_layerzero_api_key_here

# Cross-Chain RPC Endpoints
ETHEREUM_RPC_URL=https://eth-goerli.g.alchemy.com/v2/your-api-key
ARBITRUM_RPC_URL=https://arb-goerli.g.alchemy.com/v2/your-api-key
OPTIMISM_RPC_URL=https://opt-goerli.g.alchemy.com/v2/your-api-key
POLYGON_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/your-api-key
AVALANCHE_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc
BSC_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545
