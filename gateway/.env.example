# Gateway Server Configuration
GATEWAY_PORT=3001
NODE_ENV=development

# Perplexity API Configuration
PERPLEXITY_API_KEY=your_perplexity_api_key_here
PERPLEXITY_BASE_URL=https://api.perplexity.ai
PERPLEXITY_MODEL=llama-3.1-sonar-large-32k-online
PERPLEXITY_MAX_TOKENS=8000
PERPLEXITY_TEMPERATURE=0.2
PERPLEXITY_TOP_P=0.9
PERPLEXITY_PRESENCE_PENALTY=0.1

# API Security
JWT_SECRET=change_this_to_a_secure_random_string_in_production
JWT_EXPIRES_IN=1d
# Comma-separated list of API keys for client applications
API_KEYS=test-api-key-1,test-api-key-2

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX=100  # Maximum requests per window

# Logging
LOG_LEVEL=info  # debug, info, warn, error
